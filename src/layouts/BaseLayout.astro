---
import { mainNav, footerLinks } from '../data/navigation';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Low-code programming for event-driven applications' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} - Node-RED</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Roboto+Slab:wght@400;600;700&family=Ubuntu+Mono&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="nr-header">
      <div class="nr-header-inner">
        <div class="nr-brand">
          <a href="/" class="nr-logo">
            <img src="/node-red-icon.png" alt="" width="40" height="40" />
            <span class="nr-title">Node-RED</span>
          </a>
        </div>

        <nav class="nr-nav desktop-nav" aria-label="Main navigation">
          {mainNav.map((item) => (
            <a
              href={item.href}
              class:list={['nr-nav-link', { active: item.href === '/' ? currentPath === '/' : currentPath.startsWith(item.href) && !item.external }]}
              {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              {...(!item.external && (item.href === '/' ? currentPath === '/' : currentPath.startsWith(item.href)) ? { 'aria-current': 'page' } : {})}
            >
              {item.label}
            </a>
          ))}
        </nav>

        <button class="nr-mobile-toggle" aria-label="Toggle menu" aria-expanded="false">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>

      <nav class="nr-nav mobile-nav" aria-label="Mobile navigation" aria-hidden="true">
        {mainNav.map((item) => (
          <a
            href={item.href}
            class:list={['nr-nav-link', { active: item.href === '/' ? currentPath === '/' : currentPath.startsWith(item.href) && !item.external }]}
            {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer class="nr-footer" aria-label="Site footer">
      <div class="nr-footer-inner">
        <div class="nr-footer-brand">
          <a href="/" class="nr-footer-logo">
            <img src="/node-red-icon.png" alt="" width="50" height="50" />
            <span>Node-RED</span>
          </a>
          <p class="nr-footer-tagline">Low-code programming for event-driven applications</p>
        </div>

        <div class="nr-footer-links">
          {footerLinks.map((section) => (
            <div class="nr-footer-section">
              <p class="nr-footer-heading">{section.title}</p>
              <ul>
                {section.links.map((link) => (
                  <li><a href={link.href}>{link.label}</a></li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <div class="nr-footer-bottom">
        <div class="nr-footer-bottom-inner">
          <p>
            Copyright &copy; OpenJS Foundation and Node-RED contributors. All rights reserved.
            The <a href="https://openjsf.org">OpenJS Foundation</a> has registered trademarks and uses trademarks.
          </p>
        </div>
      </div>
    </footer>

    <script>
      const toggle = document.querySelector('.nr-mobile-toggle');
      const mobileNav = document.querySelector('.mobile-nav');

      toggle?.addEventListener('click', () => {
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', String(!expanded));
        mobileNav?.setAttribute('aria-hidden', String(expanded));
      });
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Open Sans', sans-serif;
    font-size: 17px;
    line-height: 1.7;
    color: #2D2D2D;
    background: #f5f5f5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  a {
    color: #C75050;
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    text-decoration: underline;
    color: #A63D3D;
  }

  h1, h2, h3, h4, h5 {
    font-family: 'Roboto Slab', serif;
    font-weight: 600;
    color: #2D2D2D;
    letter-spacing: -0.01em;
  }

  code {
    font-family: 'Ubuntu Mono', monospace;
    background: #FFF5F5;
    color: #D4394B;
    padding: 2px 8px;
    border-radius: 4px;
  }

  pre {
    background: #1E1E1E;
    color: #D4D4D4;
    padding: 16px 20px;
    border-radius: 8px;
    overflow-x: auto;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  pre code {
    background: none;
    color: inherit;
    padding: 0;
  }

  /* Focus indicators for accessibility */
  :focus-visible {
    outline: 3px solid #C75050;
    outline-offset: 2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>

<style>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 16px;
    background: #C75050;
    color: white;
    padding: 8px 16px;
    border-radius: 0 0 8px 8px;
    z-index: 1000;
    font-weight: 600;
    text-decoration: none;
  }

  .skip-link:focus {
    top: 0;
  }

  .nr-header {
    background: #1E1E1E;
    border-bottom: 3px solid #C75050;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nr-header-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    height: 64px;
  }

  .nr-brand {
    flex-shrink: 0;
  }

  .nr-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .nr-logo:hover {
    text-decoration: none;
  }

  .nr-logo img {
    width: 40px;
    height: 40px;
  }

  .nr-title {
    font-family: 'Roboto Slab', serif;
    font-weight: 700;
    font-size: 20px;
    color: #f0f0f0;
  }

  .nr-nav {
    display: flex;
    gap: 0;
  }

  .nr-nav-link {
    font-family: 'Roboto Slab', serif;
    font-size: 15px;
    color: #C0C0C0;
    text-decoration: none;
    padding: 22px 14px;
    border-bottom: 3px solid transparent;
    margin-bottom: -3px;
    transition: color 0.2s, border-color 0.2s;
  }

  .nr-nav-link:hover,
  .nr-nav-link.active {
    color: #f0f0f0;
    border-bottom-color: #C75050;
    text-decoration: none;
  }

  .nr-mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: #C0C0C0;
    cursor: pointer;
    padding: 8px;
  }

  .nr-mobile-toggle:hover {
    color: #f0f0f0;
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    background: #1E1E1E;
    padding: 0 20px 20px;
  }

  .mobile-nav .nr-nav-link {
    padding: 12px 0;
    border-bottom: 1px solid #333;
    margin-bottom: 0;
  }

  .mobile-nav[aria-hidden="false"] {
    display: flex;
  }

  @media (max-width: 900px) {
    .desktop-nav {
      display: none;
    }

    .nr-mobile-toggle {
      display: block;
    }
  }

  .nr-footer {
    background: #1E1E1E;
    color: #f0f0f0;
    margin-top: auto;
  }

  .nr-footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 48px 20px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 48px;
  }

  .nr-footer-brand a {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: #f0f0f0;
    font-family: 'Roboto Slab', serif;
    font-size: 24px;
    font-weight: 700;
  }

  .nr-footer-brand a:hover {
    text-decoration: none;
  }

  .nr-footer-brand img {
    width: 50px;
    height: 50px;
  }

  .nr-footer-tagline {
    color: #888;
    margin-top: 12px;
    font-size: 14px;
  }

  .nr-footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .nr-footer-heading {
    font-family: 'Roboto Slab', serif;
    font-size: 15px;
    font-weight: 600;
    margin: 0 0 16px 0;
    color: #f0f0f0;
  }

  .nr-footer-section ul {
    list-style: none;
  }

  .nr-footer-section li {
    margin: 8px 0;
  }

  .nr-footer-section a {
    color: #999;
    font-size: 14px;
    transition: color 0.2s;
  }

  .nr-footer-section a:hover {
    color: #f0f0f0;
    text-decoration: none;
  }

  .nr-footer-bottom {
    background: #161616;
    padding: 20px 0;
  }

  .nr-footer-bottom-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .nr-footer-bottom p {
    font-size: 12px;
    color: #888;
  }

  .nr-footer-bottom a {
    color: #C75050;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .nr-footer-inner {
      grid-template-columns: 1fr;
    }

    .nr-footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .nr-footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
