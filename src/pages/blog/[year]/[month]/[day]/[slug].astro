---
import BlogPostLayout from '../../../../../layouts/BlogPostLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((post) => {
    // With glob loader, post.id is the filename without extension
    // e.g., "2013-10-16-version-0-2-0-released"
    const match = post.id.match(/^(\d{4})-(\d{2})-(\d{2})-(.+)$/);
    if (match) {
      const [, year, month, day, slug] = match;
      return {
        params: { year, month, day, slug },
        props: {
          post,
          date: new Date(`${year}-${month}-${day}`),
        },
      };
    }
    // Fallback for non-standard filenames
    return {
      params: { year: '2024', month: '01', day: '01', slug: post.id },
      props: { post, date: new Date() },
    };
  });
}

const { post, date } = Astro.props;
const { Content } = await render(post);
---

<BlogPostLayout
  title={post.data.title}
  author={post.data.author}
  date={date}
  description={post.data.description}
>
  <Content />
</BlogPostLayout>
