---
import type { Props } from '@astrojs/starlight/props';
import { footerLinks } from '../../data/navigation';
---

<footer class="nr-footer">
  <div class="nr-footer-inner">
    <div class="nr-footer-brand">
      <a href="/" class="nr-footer-logo">
        <img src="/node-red-icon.png" alt="" width="50" height="50" />
        <span>Node-RED</span>
      </a>
      <p class="nr-footer-tagline">Low-code programming for event-driven applications</p>
    </div>

    <div class="nr-footer-links">
      {footerLinks.map((section) => (
        <div class="nr-footer-section">
          <p class="nr-footer-heading">{section.title}</p>
          <ul>
            {section.links.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>

  <div class="nr-footer-bottom">
    <div class="nr-footer-bottom-inner">
      <p>
        Copyright &copy; OpenJS Foundation and Node-RED contributors. All rights reserved.
        The <a href="https://openjsf.org">OpenJS Foundation</a> has registered trademarks and uses trademarks.
        For a list of trademarks of the OpenJS Foundation, please see our
        <a href="https://trademark-policy.openjsf.org">Trademark Policy</a> and
        <a href="https://trademark-list.openjsf.org">Trademark List</a>.
        Trademarks and logos not indicated on the list of OpenJS Foundation trademarks are trademarks or
        registered trademarks of their respective holders.
      </p>
      <p class="nr-footer-social">
        <a href="https://github.com/node-red/node-red" aria-label="GitHub">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href="https://discourse.nodered.org" aria-label="Forum">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12.103 0C18.666 0 24 5.485 24 11.997c0 6.51-5.33 11.99-11.9 11.99L0 24V11.79C0 5.28 5.532 0 12.103 0zm.116 4.563c-2.593-.003-4.996 1.352-6.337 3.57-1.33 2.208-1.387 4.957-.148 7.22L4.4 19.61l4.794-1.074c2.745 1.225 5.965.676 8.136-1.39 2.17-2.054 2.86-5.228 1.737-7.997-1.135-2.778-3.84-4.59-6.848-4.585z"/>
          </svg>
        </a>
      </p>
    </div>
  </div>
</footer>

<style>
  .nr-footer {
    background: #1E1E1E;
    color: #f0f0f0;
    margin-top: auto;
  }

  .nr-footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
  }

  .nr-footer-brand a {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: #f0f0f0;
    font-family: 'Roboto Slab', serif;
    font-size: 24px;
    font-weight: 700;
  }

  .nr-footer-brand img {
    width: 50px;
    height: 50px;
  }

  .nr-footer-tagline {
    color: #999;
    margin-top: 12px;
    font-size: 14px;
  }

  .nr-footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .nr-footer-heading {
    font-family: 'Roboto Slab', serif;
    font-size: 16px;
    font-weight: 400;
    margin: 0 0 16px 0;
    color: #f0f0f0;
  }

  .nr-footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nr-footer-section li {
    margin: 8px 0;
  }

  .nr-footer-section a {
    color: #999;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s;
  }

  .nr-footer-section a:hover {
    color: #f0f0f0;
  }

  .nr-footer-bottom {
    background: #161616;
    padding: 20px 0;
  }

  .nr-footer-bottom-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .nr-footer-bottom p {
    font-size: 12px;
    color: #999;
    line-height: 1.6;
    margin: 0;
  }

  .nr-footer-bottom a {
    color: #C75050;
    text-decoration: underline;
  }

  .nr-footer-bottom a:hover {
    color: #e06060;
  }

  .nr-footer-social {
    display: flex;
    gap: 16px;
    flex-shrink: 0;
  }

  .nr-footer-social a {
    color: #999;
    transition: color 0.2s;
  }

  .nr-footer-social a:hover {
    color: #f0f0f0;
  }

  @media (max-width: 768px) {
    .nr-footer-inner {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .nr-footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .nr-footer-bottom-inner {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .nr-footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
