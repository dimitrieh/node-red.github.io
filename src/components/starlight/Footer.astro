<style>
  .nr-footer {
    background: #1E1E1E;
    color: #f0f0f0;
    margin-top: auto;
  }

  .nr-footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
  }

  .nr-footer-brand a {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: #f0f0f0;
    font-family: 'Roboto Slab', serif;
    font-size: 24px;
    font-weight: 700;
  }

  .nr-footer-brand img {
    width: 50px;
    height: 50px;
  }

  .nr-footer-tagline {
    color: #999;
    margin-top: 12px;
    font-size: 14px;
  }

  .nr-footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .nr-footer-heading {
    font-family: 'Roboto Slab', serif;
    font-size: 16px;
    font-weight: 400;
    margin: 0 0 16px 0;
    color: #f0f0f0;
  }

  .nr-footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nr-footer-section li {
    margin: 8px 0;
  }

  .nr-footer-section a {
    color: #999;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s;
  }

  .nr-footer-section a:hover {
    color: #f0f0f0;
  }

  .nr-footer-bottom {
    background: #161616;
    padding: 20px 0;
  }

  .nr-footer-bottom-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .nr-footer-bottom p {
    font-size: 12px;
    color: #999;
    line-height: 1.6;
    margin: 0;
  }

  .nr-footer-bottom a {
    color: #C75050;
    text-decoration: underline;
  }

  .nr-footer-bottom a:hover {
    color: #e06060;
  }

  .nr-footer-social {
    display: flex;
    gap: 16px;
    flex-shrink: 0;
  }

  .nr-footer-social a {
    color: #999;
    transition: color 0.2s;
  }

  .nr-footer-social a:hover {
    color: #f0f0f0;
  }

  @media (max-width: 768px) {
    .nr-footer-inner {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .nr-footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .nr-footer-bottom-inner {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .nr-footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
